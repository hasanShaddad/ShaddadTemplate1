@model Tamplate_1.Models.LoginModel

@{
    ViewBag.Title = "Log in";
}


<section id="loginForm">
    <div class="container">
       
        <div class="row">
            <div class="col-lg-12 text-center">
                <h1>log in</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <h2>   @Html.ActionLink("back home", "Index", "Home")</h2>
            </div>
        </div>
        <div class="row" style="background-color:white;">
            <div class="col-lg-6 text-center">

                <h2>Use a local account to log in.</h2>
                @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)

                    <fieldset>

                        
                                @Html.LabelFor(m => m.UserName)
                                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "User Name" })
                                @Html.ValidationMessageFor(m => m.UserName)
                            
                                @Html.LabelFor(m => m.Password)
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "password" })
                                @Html.ValidationMessageFor(m => m.Password)
                           
                                <label class="checkbox" for="RememberMe">@Html.CheckBoxFor(m => m.RememberMe)Remember me?</label>

                           
                        <input type="submit" value="Log in" />
                    </fieldset>
                    <p>
                        @Html.ActionLink("Register", "Register") if you don't have an account.
                    </p>
                }

            </div>@*end of first col*@
            <div class="col-lg-6 text-center">

                <h2>log in with your FaceBook.</h2>
                @Html.Action("ExternalLoginsList", new { ReturnUrl = ViewBag.ReturnUrl })

            </div> @*end of second col*@
        </div> @*end of row*@
    </div>   @*//end of container*@
</section>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
